# Production environment variables for Plesk hosting
# Copy this file to .env on the server and fill in the actual values

# Django settings
SECRET_KEY=your-super-secret-key-here-change-this
DEBUG=False
DJANGO_SETTINGS_MODULE=barlau.settings_production

# Database settings (MySQL)
DB_NAME=barlau_db
DB_USER=barlau_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=3306

# Email settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@barlau.org

# Firebase settings (for push notifications)
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# Security settings
ALLOWED_HOSTS=barlau.org,www.barlau.org,barlau.kz,www.barlau.kz 